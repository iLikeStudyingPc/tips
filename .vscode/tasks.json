{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C默认生成",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"*.c",
				"-o",
				"${workspaceFolder}/software/debug/tips"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/gcc"
		}
	]
}